<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class="header">
  <div class="nav">
    <div class="nav__left">
      <%= link_to image_tag("hibitumo.logo.jpg", class: :logo), root_path %>
    </div>
  </div>
  <div class="inner">
    <div class='search-bar-contents'>
      <form class="search-form" action="#">
        <input class='input-box' placeholder='キーワードから探す'>
        <button class="search-button">
          <%= image_tag "search.png", class:"search-icon" %>
        </button>
      </form>
    </div>
    <ul class='lists-right'>
      <% if user_signed_in? %>
        <%# deviseを導入できたら、ログインの有無で表示が変わるように分岐しましょう%>
        <li><%= link_to 'New Task', "#", class: :nav__btn %></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, data: {turbo_method: :delete}, class: :nav__btn %></li>
      <% else %>
        <li><%= link_to 'ログイン', new_user_session_path, class: :nav__btn %></li>
        <li><%= link_to '新規登録', new_user_registration_path, class: :nav__btn %></li>
        <%# //deviseを導入できたら、ログインの有無で表示が変わるように分岐しましょう%>
      <% end %>
    </ul>
  </div>
</header>



