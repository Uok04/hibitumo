<%= render "shared/header" %>
<div class='main'>

  <%# 画面上部の「本日も頑張りましょう」帯部分 %>
  <div class='title-contents'>
    <h2 class='service-title'>
      <% if user_signed_in? %>
        <p><%= current_user.nickname %>さん、のタスク一覧</p>
      <% end %>
    </h2>
  </div>
  <%# 画面上部の「本日も頑張りましょう」帯部分 %>

  <%# ユーザー一覧 %>
  <%# <h2 class='title'>ユーザー一覧</h2> %>

    <div class='item-contents'>
      <ul class='item-lists'>
      <% @tasks.each do |task| %>
        <li class='list'>
          <div class='user-area'>
            <div class='item-info' style="<%= deadline_style(task.deadline) %>"><%= task.deadline.strftime("%Y-%m-%d") %>
              <h3 class='item-name'>
                <%= task.task_name %>
              </h3>
              <h3 class='item-name'>
                <%= task.category.name %>
              </h3>
               <h3 class='item-name'>
                <%= task.deadline %>
              </h3>
            </div>
          </div>
        </li>
      <% end %>
      </ul>
    </div>
</div>
  <%# ユーザー一覧 %>


<%= render "shared/footer" %>